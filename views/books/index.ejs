<h2>Search Books</h2>
<form action="/books" method="GET">
<div></div>   
    <label>Title</label>
    <input type="text" name="title" value="<%= searchOptions.title %>">
</div>

<div>
    <label>Publish After</label>
    <input type="date" name="publishedAfter" value="<%=
        searchOptions.publishedAfter %>">
</div>

<div>
    <label>Publish Before</label>
    <input type="date" name="publishedBefore" value="<%=
        searchOptions.publishedBefore %>">
</div>

    <button type="submit">Search</button>
</form>
<br/>
<h3><u>Books List</u></h3>
<% books.forEach(book => { %>
    <div>Author: <%= book.title %></div>
    <div>Description: <%= book.description %></div>
    <div>Publish Date: <%= new Date(book.publishDate).toLocaleString().split(',')[0] %></div>
    <br/>
<% }); %>
